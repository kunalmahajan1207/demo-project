<h1><%= @post.title %></h1>

<p><%= @post.description %></p>
<p><%= @post.user_id %></p>

<ul>
  <li><%= link_to "Edit", edit_post_path(@post) %></li>
  <li><%= link_to "Destroy", post_path(@post), data: {
                    method: :delete,
                    confirm: "Are you sure?"
                  } %></li>
</ul>
